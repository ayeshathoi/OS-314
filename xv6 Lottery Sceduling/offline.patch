+int settickets(int tickets)
+{
+
+  if(tickets <= 0 )
+    return -1;
+  
+  struct proc *p = myproc();
+  
+  acquire(&p->lock);
+  p->current_tickets = tickets;
+  p->original_tickets = tickets;
+  release(&p->lock);
+
+  return 0;
+}
